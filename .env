# Server Configuration
PORT=3000
NODE_ENV=development

# Database Configuration
DB_HOST=localhost
DB_PORT=3306
DB_USER=root
DB_PASSWORD=
DB_NAME=kosovo_covid_db

# API Configuration
API_VERSION=v1
API_BASE_URL=http://localhost:3000

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# External APIs (for automation)
WHO_API_URL=https://covid19.who.int/WHO-COVID-19-global-data.csv
WORLDOMETER_API_URL=https://disease.sh/v3/covid-19/countries/kosovo

# Automation Settings
AUTO_UPDATE_INTERVAL=*/30 * * * *
ENABLE_AUTO_UPDATES=true

# Logging
LOG_LEVEL=info
LOG_FILE=logs/covid-api.log